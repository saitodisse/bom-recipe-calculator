{
  "name": "@saitodisse/bom-recipe-calculator",
  "version": "0.0.1",
  "description": "A Bill of Materials (BOM) recipe calculator for nested product recipes. Calculate costs and weights for complex product recipes with multiple levels of ingredients.",
  "main": "dist/src/mod.mjs",
  "type": "module",
  "repository": "https://github.com/saitodisse/bom-recipe-calculator",
  "scripts": {
    "check": "tsc --noEmit",
    "start": "node src/mod.mts",
    "prebuild": "rm -rf dist/",
    "build": "tsc",
    "jsr:dry": "jsr publish --dry-run --allow-dirty",
    "npm:dry": "npm pack --dry-run",
    "prepublish:dry": "npm run build",
    "publish:dry": "npm run jsr:dry && npm run npm:dry",
    "test": "node --test src/**/*_test.mts"
  },
  "author": "saitodisse",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.13.5",
    "jsr": "^0.13.3",
    "typescript": "^5.7.3"
  },
  "exports": {
    ".": "./dist/src/mod.mjs"
  },
  "files": [
    "dist/src/**/*.mjs",
    "dist/src/**/*.mjs.map",
    "dist/src/**/*.d.mts",
    "dist/src/**/*.d.mts.map",
    "!dist/src/**/*_test.mjs",
    "!dist/src/**/*_test.mjs.map",
    "!dist/src/**/*_test.d.mts",
    "!dist/src/**/*_test.d.mts.map",
    "LICENSE",
    "README.md",
    "package.json",
    "package-lock.json"
  ]
}